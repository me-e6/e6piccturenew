rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    // ============================================================
    // HELPER FUNCTIONS
    // ============================================================
    function isAuthenticated() {
      return request.auth != null;
    }

    function isOwner(userId) {
      return request.auth.uid == userId;
    }

    // ============================================================
    // USERS COLLECTION
    // ============================================================
    match /users/{userId} {
      // Anyone authenticated can read user profiles
      allow read: if isAuthenticated();
      
      // Only owner can update their profile
      allow update: if isOwner(userId);
      
      // Only allow create during signup
      allow create: if isOwner(userId);

      // --------------------------------------------------------
      // LIKED POSTS SUBCOLLECTION
      // --------------------------------------------------------
      match /liked_posts/{postId} {
        allow read: if isAuthenticated();
        allow write: if isOwner(userId);
      }

      // --------------------------------------------------------
      // SAVED POSTS SUBCOLLECTION (PRIVATE)
      // --------------------------------------------------------
      match /saved_posts/{postId} {
        // Only owner can read their saved posts
        allow read: if isOwner(userId);
        allow write: if isOwner(userId);
      }

      // --------------------------------------------------------
      // REPICS SUBCOLLECTION
      // --------------------------------------------------------
      match /repics/{postId} {
        // Anyone can see who repicced (public engagement)
        allow read: if isAuthenticated();
        allow write: if isOwner(userId);
      }

      // --------------------------------------------------------
      // LEGACY: repic_posts (backward compatibility)
      // --------------------------------------------------------
      match /repic_posts/{postId} {
        allow read: if isAuthenticated();
        allow write: if isOwner(userId);
      }

      // --------------------------------------------------------
      // FOLLOWERS / FOLLOWING
      // --------------------------------------------------------
      match /followers/{followerId} {
        allow read: if isAuthenticated();
        allow write: if isAuthenticated();
      }

      match /following/{followingId} {
        allow read: if isAuthenticated();
        allow write: if isOwner(userId);
      }
    }

    // ============================================================
    // POSTS COLLECTION
    // ============================================================
    match /posts/{postId} {
      // Anyone authenticated can read posts
      allow read: if isAuthenticated();
      
      // Anyone authenticated can create posts
      allow create: if isAuthenticated();
      
      // Only author can update/delete their posts
      allow update: if isAuthenticated() && 
        (resource.data.authorId == request.auth.uid || 
         request.resource.data.diff(resource.data).affectedKeys()
           .hasOnly(['likeCount', 'saveCount', 'repicCount', 'replyCount', 'quoteReplyCount']));
      
      allow delete: if isAuthenticated() && 
        resource.data.authorId == request.auth.uid;

      // --------------------------------------------------------
      // LIKES SUBCOLLECTION
      // --------------------------------------------------------
      match /likes/{likeId} {
        allow read: if isAuthenticated();
        allow create: if isAuthenticated() && likeId == request.auth.uid;
        allow delete: if isAuthenticated() && likeId == request.auth.uid;
      }

      // --------------------------------------------------------
      // SAVES SUBCOLLECTION
      // --------------------------------------------------------
      match /saves/{saveId} {
        allow read: if isAuthenticated();
        allow create: if isAuthenticated() && saveId == request.auth.uid;
        allow delete: if isAuthenticated() && saveId == request.auth.uid;
      }

      // --------------------------------------------------------
      // REPICS SUBCOLLECTION
      // --------------------------------------------------------
      match /repics/{repicId} {
        allow read: if isAuthenticated();
        allow create: if isAuthenticated() && repicId == request.auth.uid;
        allow delete: if isAuthenticated() && repicId == request.auth.uid;
      }

      // --------------------------------------------------------
      // REPLIES SUBCOLLECTION
      // --------------------------------------------------------
      match /replies/{replyId} {
        allow read: if isAuthenticated();
        allow create: if isAuthenticated();
        allow update, delete: if isAuthenticated() && 
          resource.data.uid == request.auth.uid;
      }
    }
  }
}